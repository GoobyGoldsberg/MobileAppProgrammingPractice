<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/showAppointmentsBtn"
        android:layout_width="255dp"
        android:layout_height="96dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="302dp"
        android:text="Show all Appointments"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookAppointmentBtn" />

    <Button
        android:id="@+id/bookAppointmentBtn"
        android:layout_width="255dp"
        android:layout_height="96dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="293dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="45dp"
        android:text="Book an Appointment"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/showAppointmentsBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>